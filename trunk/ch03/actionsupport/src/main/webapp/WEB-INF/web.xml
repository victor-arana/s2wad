<?xml version="1.0" encoding="UTF-8"?>
<web-app id="struts_blank" version="2.4"
         xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
  <display-name>
    Packt Struts 2 Web Application Development - Chapter 3 - ActionSupport Examples
  </display-name>

  <filter>
    <filter-name>struts2</filter-name>

    <filter-class>
      org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter
    </filter-class>

    <init-param>
      <param-name>struts.devMode</param-name>
      <param-value>true</param-value>
    </init-param>

    <init-param>
      <param-name>struts.convention.result.path</param-name>
      <param-value>/WEB-INF/jsps</param-value>
    </init-param>

    <init-param>
      <param-name>struts.custom.i18n.resources</param-name>
      <param-value>ch03-global-messages,com/packt/s2wad/ch03/misc/misc-messages</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>struts2</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
